<h1><%= @topic.name %></h1>
<%= link_to 'Edit topic name', edit_topic_path(@topic.id) %>
<% @markers = [] %>
<br/>
<h2>Tags:    <%= link_to 'Create new tag', new_tag_path(topic_id: @topic.id) %></h2>
<br/>
<div class="row">
  <ul>
   <% @topic.tags.each do |tag| %>
     <% @markers << "markers=color:blue%7Clabel:S%7C#{tag.lat},#{tag.lng}" %>
     <li><%= link_to tag.text, tag %></li>
   <% end %>
  </ul> 
  <div class="span6 offset3">
    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?size=500x500&sensor=false&#{@markers.join('&')}" %>
  </div>
</div>
