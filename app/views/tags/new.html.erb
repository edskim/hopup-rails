<h1>Create new tag</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@tag) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :text %>
      <%= f.text_field :text %>
      <%= f.label :location %>
      <%= f.text_field :location %>
      <%= f.hidden_field :topic_id, :value => @topic_id %>
      <%= f.submit "Create tag", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
