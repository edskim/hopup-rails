<h1><%= @tag.text %></h1>
<h2><%= @tag.location %></h2>
<h2><%= "Latitude: #{@tag.lat}  Longitude: #{@tag.lng}" %></h2>

<div class="row">
  <div class="span12">
    <div class="span3">
      <%= link_to 'Edit tag', edit_tag_path(@tag.id) if current_user?(@tag.topic.creator) %>
    </div>
    <div class="span3">
      <%= "#{@tag.hits.length} hits" if current_user?(@tag.topic.creator) %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6">
    <h3>Found in topic: <%= link_to @tag.topic.name, @tag.topic %></h3>
  </div>
</div>

<div class="row">
  <div class="span6 offset3">
    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@tag.lat},#{@tag.lng}&zoom=15&size=500x500&sensor=false&markers=color:blue%7Clabel:S%7C#{@tag.lat},#{@tag.lng}" %>
  </div>
</div>
