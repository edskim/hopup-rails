<h1>Update this tag</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@tag) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :text %>
      <%= f.text_field :text %>
      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
